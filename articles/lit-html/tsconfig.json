{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
